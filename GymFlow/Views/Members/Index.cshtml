@model IEnumerable<GymFlow.Models.Member>

<h1>Seznam členů fitka</h1>
<a asp-action="Create" style="display:inline-block; margin-bottom: 15px;">➕ Přidat klienta</a>

<table class="table">
    <thead>
        <tr>
            <th>Jméno</th>
            <th>Příjmení</th>
            <th>E-mail</th>
            <th>Platnost do</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Email</td>
                <td>@member.MembershipExpiry.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@member.Id" style="margin-right: 15px; text-decoration: none;">✏️ Upravit</a>

                    <form method="post" asp-action="Delete" asp-route-id="@member.Id" style="display:inline;">
                        <button type="submit" style="color: red; border: none; background: none; cursor: pointer;">
                            ❌ Smazat
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>